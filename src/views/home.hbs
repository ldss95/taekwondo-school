<div id="app">
    {{> header }}

    <main>
        <div id="main_slider" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#main_slider" data-slide-to="0" class="active"></li>
                <li data-target="#main_slider" data-slide-to="1"></li>
                <li data-target="#main_slider" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item" :class="{'active': index == 0}" v-for="(slide, index) in slides">
                    <img class="d-block w-100" :src="slide.imagen">
                    <div class="info">
                        <div class="carousel-caption">
                            <h2 v-text="slide.titulo"></h2>
                            <h5 v-text="slide.descripcion"></h5>
                            <br>
                            <a v-if="slide.link_boton && slide.texto_boton" v-text="slide.texto_boton"
                                class="btn btn-primary" :href="slide.link_boton"></a>
                        </div>
                    </div>

                    <div class="sombra absoluta s2"></div>
                </div>
            </div>
        </div>

        <br>

        <div class="container">
            <section id="cursos">
                <h2 class="text-center">Cursos</h2>
                <br>
                <div class="row">
                    <div class="col-12 col-md-10 offset-md-1 col-lg-6 offset-lg-0" v-for="(curso, index) in cursos">
                        <div class="curso">
                            <div class="row">
                                <div class="col-12 col-lg-4" style="display:flex; align-items: center;">
                                    <div class="img" :style="{backgroundImage: 'url(' + curso.imagen + ')'}">

                                    </div>
                                </div>

                                <div class="col-12 col-lg-8">
                                    <div class="detalles">
                                        <h6 class="titulo text-center" v-text="curso.nombre"></h6>
                                        <hr>
                                        <ul>
                                            <li><b>Inscripcion: </b> <span
                                                    v-text="cashFormat(curso.precio_inscripcion)"></span></li>
                                            <li><b>Mensualidad: </b> <span
                                                    v-text="cashFormat(curso.precio_inscripcion)"></span></li>
                                            <li><b>Fecha Inicio: </b> <span v-text="curso.fecha_inicio"></span>
                                            </li>
                                        </ul>

                                        <div class="text-center">
                                            <button class="btn btn-secondary" @click="detallesDelCurso(index)">Mas
                                                detalles</button>
                                            <button class="btn btn-primary">Inscribete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <div id="main_video">
            <iframe width="1907" height="100%" src="https://www.youtube.com/embed/HkAmVkESI1E" frameborder="0"
                allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>

        <br>

        <div class="container">
            <h2 class="text-center" v-text="articulo.nombre"></h2>
            <br>
            <p v-text="articulo.texto"></p>
            <br>

            <div class="row">
                <div class="col-12 col-md-6">
                    <div id="contact_form">
                        <h2 class="text-center">Contactanos</h2>
                        <br>

                        <form @submit="contactar">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" name="nombre" id="fc_nombre" class="form-control"
                                            placeholder="Nomrbe" required>
                                        <label for="fc_nombre" class="control-label">Nombre</label>
                                    </div>
                                    <br>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="email" id="fc_email" name="email" class="form-control"
                                            placeholder="Email" required>
                                        <label for="fc_email">Email</label>
                                    </div>
                                    <br>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" id="fc_asunto" name="asunto" class="form-control"
                                            placeholder="Asunto">
                                        <label for="fc_asunto">Asunto</label>
                                    </div>
                                    <br>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="number" id="fc_tel" name="telefono" class="form-control"
                                            placeholder="Telefono" min="8090000001">
                                        <label for="fc_tel">Telefono</label>
                                    </div>
                                    <br>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <textarea id="fc_mensaje" name="mensaje" cols="30" class="form-control"
                                            placeholder="Mensaje"></textarea>
                                        <label for="fc_mensaje">Mensaje</label>
                                    </div>
                                    <br>
                                </div>

                                <div class="col-12">
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary">
                                            <span class="spinner-border spinner-border-sm d-none" role="status"
                                                aria-hidden="true"></span>
                                            Enviar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="d-block d-md-none">
                        <br>
                    </div>
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d21407.121523119422!2d-69.9125073801179!3d18.4709630081977!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8eaf89c9763e7b01%3A0xc491c654f9f9ca40!2sJuan+Pablo+Duarte!5e0!3m2!1ses-419!2sdo!4v1558276414399!5m2!1ses-419!2sdo"
                        width="100%" height="100%" frameborder="0" style="border:0" allowfullscreen>
                    </iframe>

                    <div class="d-block d-md-none">
                        <br><br>
                    </div>
                </div>
            </div>

            <br>
            <br>

        </div>

        <!-- Modal -->
        <div class="modal fade" id="MDetallesDelCurso" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle" v-text="cursoDetalles.nombre"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p v-text="cursoDetalles.descripcion"></p>
                        <p>
                            <b>Maestro: </b> <span v-text="cursoDetalles.maestro"></span>
                            <br>
                            <b>Nivel: </b> Cinturon <span v-text="cursoDetalles.cinturon"></span>
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Inscribete</button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    {{> footer }}
</div>
<script>
    const vue = new Vue({
        el: '#app',
        data: {
            page: 'inicio',
            cursos: [],
            slides: [],
            articulo: {},
            datos: {},
            session: {},
            cursoDetalles: {}
        },
        methods: {
            contactar(e) {
                e.preventDefault()
                let loader = e.target.querySelector('button span')
                loader.classList.remove('d-none')
                axios.post('/API/contactos', serialize(e.target))
                    .then(res => {
                        swal.fire(
                            'Listo',
                            'Hemos recivido sus datos correctamente, nos pondremos en contacto lo mas pronto posible.',
                            'success'
                        )
                        loader.classList.add('d-none')
                        e.target.reset()
                    }).catch(error => {
                        swal.fire(
                            'Error',
                            'Ha surgido un error inesperado, por favor intentelo mas tarde.',
                            'error'
                        )
                        console.error(error)
                        loader.classList.add('d-none')
                    })
            },
            cashFormat(monto) {
                return '$ ' + format(monto, 'cash')
            },
            fechaFormat(fecha) {
                return (fecha.length != 10) ? fecha : format(fecha, 'fecha')
            },
            detallesDelCurso(index) {
                this.cursoDetalles = this.cursos[index]
                $('#MDetallesDelCurso').modal('show')
            }
        },
        mounted() {
            axios.get('/API/common/home')
                .then(res => {
                    this.cursos = res.data.cursos
                    this.slides = res.data.slides
                    this.articulo = res.data.articulo
                }).catch(error => {
                    console.log(error)
                })

            axios.get('/API/datos')
                .then(res => {
                    this.datos = res.data
                    this.datos.telefonoConFormato = format(this.datos.telefono, 'tel')
                }).catch(error => {
                    console.error(error)
                })

            cargarSesion()
        }
    })
</script>