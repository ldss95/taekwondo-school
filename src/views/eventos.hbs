<div id="app">
    {{> header }}

    <main>
        <div class="container">
            <br>
            <h2 class="text-center" v-if="eventos.length > 0">Proximos Eventos</h2>
            <br>

            <div class="row">
                <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-0 col-lg-4" v-for="evento in eventos">
                    <div class="evento">
                        <header>
                            <h3 class="text-center" v-text="evento.nombre"></h3>
                        </header>
                        <div class="body" :style="{backgroundImage: 'url(' + evento.imagen + ')'}">

                        </div>
                    </div>
                    <br>
                </div>
            </div>
            <br>

            <h2 class="text-center" v-if="noticias.length > 1">Noticias</h2>
            <br>

            <div class="row">

            </div>
        </div>
    </main>
    <br><br>

    {{> footer }}
</div>
<script>
    const vue = new Vue({
        el: '#app',
        data: {
            page: 'eventos',
            eventos: [],
            noticias: [],
            datos: {},
            session: {}
        },
        mounted(){
            axios.get('/API/eventos')
            .then(res => {
                let now = new Date()
                let fecha = `${now.getFullYear()}-${now.getMonth()}-${now.getDate()}`
                res.data.forEach(evento => {
                    if(new Date(evento.fecha) > now)
                        this.eventos.push(evento)
                })
            }).catch(error => {
                console.error(error)
            })

            axios.get('/API/datos')
            .then(res => {
                this.datos = res.data
                this.datos.telefonoConFormato = format(this.datos.telefono, 'tel')
            }).catch(error => {
                console.error(error)
            })

            cargarSesion()
        }
    })
</script>