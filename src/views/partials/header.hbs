<header id="main_header">
    <div class="container">
        <div>
            <div id="toggle_menu" class="ssm-toggle-nav">
                <div class="hamburguer">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
                <div class="text">
                    Menu
                </div>
            </div>
        </div>
        <div class="d-none d-md-block">
            <h2 v-text="datos.nombre"></h2>
        </div>
        <div>
            <div id="login_button" data-toggle="modal" data-target="#MLogin" v-if="!session.loggedin">
                <i class="far fa-user"></i>
                Iniciar Sesion
            </div>
            <div v-else id="user_button">
                <i class="far fa-user"></i>
                <span v-text="session.name.substr(0, 15)"></span>

                <div class="user-sub-menu">
                    <div class="contenedor">
                        <ul>
                            <li v-if="session.rol == 'Cliente'">
                                <a href="/perfil">Mi Cuenta</a>
                            </li>
                            <li v-else>
                                <a href="/admin">Administrar</a>
                            </li>
                            <li>
                                <a href="#" onclick='logout()'>Cerrar Sesion</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
</header>

<nav id="main_menu">
    <ul>
        <li><a href="/" :class="{ active: page == 'inicio' }">INICIO</a></li>
        <li><a href="/#cursos" :class="{ active: page == 'cursos' }">CURSOS</a></li>
        <li><a href="/sobre_nosotros" :class="{ active: page == 'nosotros' }">SOBRE NOSOTROS</a></li>
        <li><a href="/videos" :class="{ active: page == 'videos' }">VIDEOS</a></li>
        <li><a href="/eventos" :class="{ active: page == 'eventos' }">EVENTOS</a></li>
        <li><a href="/consultas" :class="{ active: page == 'consultas' }">CONSULTAS</a></li>
        <li><a href="/inscripcion" :class="{ active: page == 'inscripcion' }">INSCRIPCION</a></li>
    </ul>
</nav>

<div class="modal fade" id="MLogin" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
        <div class="modal-content">
            <form id="FLogin" class="modal-body">
                <br>
                <h4 class="text-center">Iniciar Sesion</h4>
                <br>

                <div class="col-12">
                    <div class="form-group">
                        <input type="email" id="lf_email" name="email" class="form-control" placeholder="Correo Electronico" required>
                        <label for="lf_email">Correo Electronico</label>
                    </div>
                    <br>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <input type="password" id="lf_pass" name="pass" class="form-control" placeholder="Contraseña" required>
                        <label for="lf_pass">Contraseña</label>
                    </div>
                    <!--
                    <a href="#">Olvidaste tu contraseña?</a>
                    -->
                    
                    <div id="login_error">

                    </div>
                </div>
                <div class="text-center">
                    <br>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                </div>
            </form>
        </div>
    </div>
</div>