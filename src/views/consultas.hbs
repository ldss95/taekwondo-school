<div id="app">
    {{> header }}

    <div id="container_consultas">
        <div class="sombra contenido-centrado s5 ">
            <div class="contenido">
                <h3 class="text-center">Mantengase al tanto del progeso de su hijo/a!</h3>
                <br>
                <form id="buscador">
                    <input type="number" placeholder="Numero de Cedula" required>
                    <button class="btn btn-primary" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    new Vue({
        el: '#app',
        data: {
            page: 'consultas',
            datos: {}
        },
        mounted(){
            document.querySelector('#buscador').addEventListener('submit', function(e){
                e.preventDefault()
                alert('Enviando')
            })

            axios.get('/API/datos')
            .then(res => {
                this.datos = res.data[0]
                this.datos.telefonoConFormato = format(this.datos.telefono, 'tel')
            }).catch(error => {
                console.error(error)
            })
        }
    })
</script>